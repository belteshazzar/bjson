{
  "name": "bjson",
  "version": "1.0.0",
  "description": "A compact binary encoding format for JSON data with support for Origin Private File System (OPFS) in browsers",
  "main": "src/bjson.js",
  "type": "module",
  "exports": {
    ".": "./src/bjson.js",
    "./bplustree": "./src/bplustree.js",
    "./rtree": "./src/rtree.js",
    "./textindex": "./src/textindex.js",
    "./textlog": "./src/textlog.js"
  },
  "bin": {
    "bjson-decode": "./bin/bjson-decode.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:browser": "vitest run --browser",
    "test:browser:ui": "vitest --browser --ui",
    "serve": "http-server -c-1 ."
  },
  "keywords": [
    "binary",
    "json",
    "encoding",
    "opfs",
    "storage",
    "mongodb",
    "objectid",
    "serialization"
  ],
  "author": "",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "http-server": "^14.1.1",
    "node-opfs": "github:belteshazzar/node-opfs",
    "playwright": "^1.49.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "diff": "^8.0.2",
    "stemmer": "^2.0.1"
  }
}
